    <div class="span4">
      
      <div class="row"><div class="span4 feedbackbox"><div class="offsethalf span3 feedback">
        <fieldset>
          <legend><username><%= @user.name %></legend>
          <div class="row statusbar">
            <div class="spanhalf"><p>Week</p></div>
            <div class="span2 progress progress-striped progress-warning tips" 
                  title="<%= @my_week_sum %>/<%= @workhours_week %>"><div class="bar" 
                  style="width: <%= @utilization_week %>;"><p><%= @utilization_week %></p></div></div>
          </div>
          <div class="row statusbar">
            <div class="spanhalf"><p>Month</p></div>
            <div class="span2 progress progress-striped progress-warning tips" 
                  title="<%= @my_month_sum %>/<%= @workhours_month %>"><div class="bar" 
                  style="width: <%= @utilization_month %>;"><p><%= @utilization_month %></p></div></div>
          </div>
          <div class="row statusbar">
            <div class="spanhalf"><p>Year</p></div>
            <div class="span2 progress progress-striped progress-warning tips" 
                  title="<%= @my_year_sum %>/<%= @workhours_year %>"><div class="bar" 
                  style="width: <%= @utilization_year %>;"><p><%= @utilization_year %></p></div></div>
          </div>
        </fieldset>
      </div></div></div> <!-- Feedback-->
      
      
      <div class="row"><div class="span4 formfilter">
      <%= form_tag root_url, :method => 'get' do %> <!-- Creates the form filter -->      
      
        <div class="row"><div class="span4"><%= submit_tag "Filter Data", :name => nil , :class => "btn span4 "%></div></div>

        <div class="row"><div class="span4 displayinline">
          <label for="startdate">From</label>
			    <%= text_field(:from, '', :value => @myfrom.strftime('%h %-d %Y'), :class => "span1", :id => "startdate") %>
          <label for="enddate">To</label>
	  		  <%= text_field(:to, '', :value => @myto.strftime('%h %-d %Y'), :class => "span1", :id => "enddate") %>
        </div></div> <!-- filterform -->
       

        <div class="row themecolor">  <!-- Filters the project and employees -->
          <div class="span2"><!-- List Projects -->
            <div class="centertext"><p>Projects</p></div>
            <% @projects.each do |p| %>	
              <label>
    			      <%= check_box(:filter, :projects, {:multiple => true, :checked => @filter_projects.include?(p[3].to_s)}, p[3], nil)%>
    			      <%= p[0] %> (<%= p[2] %>)
    		      </label>
    			  <% end %>
          </div> <!-- List Projects -->
          <div class="span2"><!-- List Employees -->   
    		  	<div class="centertext"><p>Employees</p></div>
    		  	<% @employees.each do |u| %>
            	<label>
    			      <%= check_box(:filter, :employees, {:multiple => true, :checked => @filter_employees.include?(u[3].to_s)}, u[3], nil)%>
    			      <%= u[0] %>  (<%= u[2] %>)
    		      </label>
    		    <% end %>
          </div><!-- List Employees -->      
        </div> <!-- ProjectList Row -->
      

    	<% end %>
    	</div></div>
    
    </div>  
      
