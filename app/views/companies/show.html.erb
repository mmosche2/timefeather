<div class="container mainpage">
  
  <div class="row"> <!-- New Entry, Feedback -->
	  
	  <div class="span7"> <!-- New Entry -->  
	    <%= render :partial => "entries/form" %>
	  </div> <!-- New Entry -->
	  
	  <div class="span5 feedback"> <!-- Feedback-->
      <fieldset>
        <legend><username><%= @user.name %></legend>
        <div class="row statusbar">
          <div class="span1"><p>Week <!-- (<%= @my_week_sum %>)  --></p></div>
          <div class="span2 progress progress-striped progress-warning"><div class="bar" 
			      style="width: <%= @utilization_week %>;"><p><%= @utilization_week %></p></div></div>
          <div class="displaypercent"><p><%= @my_week_sum %>/<%= @workhours_week %></p></div>
        </div>
        <div class="row statusbar">
          <div class="span1"><p>Month <!-- (<%= @my_month_sum %>) --></p></div>
          <div class="span2 progress progress-striped progress-warning"><div class="bar" 
				    style="width: <%= @utilization_month %>;"><p><%= @utilization_month %></p></div></div>
          <div class="displaypercent"><p><%= @my_month_sum %>/<%= @workhours_month %></p></div>
        </div>
        <div class="row statusbar">
          <div class="span1"><p>Year <!-- (<%= @my_year_sum %>) --></p></div>
          <div class="span2 progress progress-striped progress-warning"><div class="bar" 
				    style="width: <%= @utilization_year %>;"><p><%= @utilization_year %></p></div></div>
          <div class="displaypercent"><p><%= @my_year_sum %>/<%= @workhours_year %></p></div>
        </div>
      </fieldset>
	  </div> <!-- Feedback-->
	
	</div> <!-- New Entry, Feedback -->
 
 
 
  <div class="row"> <!-- Filter Data, Details -->
	  
	  <div class="span4"> <!-- Filter Data Section -->  
	    
	    <div class="viewselect">
        <div data-toggle="buttons-radio">
        
        <!--
          <button id="EntriesTable_btn" class="btn btn-info"><i class="icon-list-alt icon-white"></i> Entries</button>
          <button id="EntriesCalendar_btn" class="btn btn-info"><i class="icon-calendar icon-white"></i> Calendar</button>
          <button id="EntriesTrends_btn" class="btn btn-info"><i class="icon-signal icon-white"></i> Trends</button>
        -->
        
          <%= link_to "Entries", entrytable_path(:sort => "cal_date", :direction => "desc",
      											   :myfrom => @myfrom, :myto => @myto, 
      											   :filter_projects => @filter_projects,
      											   :filter_employees => @filter_employees), 
      					:remote => true, :id => "EntriesTable_btn", :class => "btn btn-info" %>

      		<%= link_to "Calendar", entrycalendar_path(:sort => "cal_date", :direction => "desc",
      											   :myfrom => @myfrom, :myto => @myto, 
      											   :filter_projects => @filter_projects,
      											   :filter_employees => @filter_employees), 
      					:remote => true, :id => "EntriesCalendar_btn", :class => "btn btn-info" %>

			<%= link_to "Trends", entrytrends_path(:sort => "cal_date", :direction => "desc",
      											   :myfrom => @myfrom, :myto => @myto, 
      											   :filter_projects => @filter_projects,
      											   :filter_employees => @filter_employees), 
      					:remote => true, :id => "EntriesTrends_btn", :class => "btn btn-info" %>
          
          
        </div>
      </div> <!-- ViewSelect -->
	    
	    
      <%= form_tag root_url, :method => 'get' do %> <!-- Creates the form filter -->
      <div class="filterdata">
      
        <form></form> <!-- Do not remove or formatting of below is broken -->
        <div class="filterform">
          <form class="form-inline">
            <label for="startdate">From</label>
  			    <%= text_field(:from, '', :value => @myfrom.strftime('%h %-d %Y'), :class => "span1", :id => "startdate") %>
            <label for="enddate">To</label>
  	  		  <%= text_field(:to, '', :value => @myto.strftime('%h %-d %Y'), :class => "span1", :id => "enddate") %>
          </form>
        </div> <!-- filterform -->

        <div class="row projectlist"> 
          <div id="listFilterProjects" class="span2"><!-- List Projects -->


			<%= render 'projects/filterlist' %>


          </div> <!-- List Projects -->
          <div id="listFilterEmployees" class="span2"><!-- List Employees -->   
  			  

			<%= render 'users/filterlist' %>


          </div><!-- List Employees -->      
      </div> <!-- ProjectList Row -->
        
      <div>
		    <%= submit_tag "Filter Data", :name => nil , :class => "btn btn-info span4"%>
      </div>
        
      </div> <!-- filterdata --> <!-- Why do I absolutely need this div for the sectinos to work? -->  

    	<% end %>

	  </div> <!-- Filter Data  Section-->
	  
	  <div class="span8 details"> <!-- Details -->
	    
    	<div class="selectdetails">
        	<div id="entrytable_sum">
          		<p class="totalrow"><%= @hrs_sum %> hours</p>
        	</div> 
    		<div id="entrytable">
    			<%= render :partial => "entries/entries_table" %>
    		</div>
    		<div id="entrycalendar_sum" class="hidden">
    			<p class="totalrow"><%= @cal_month_sum %> hours</p>
    		</div>
    		<div id="entrycalendar" class="hidden">
    			<%= render :partial => "entries/entries_calendar" %>
    		</div>

    		<div id="entrytrends" class="hidden">
    			<%= render :partial => "entries/entries_trends" %>
    		</div>
    	</div><!-- selectdetails -->	    
	    
	  </div> <!-- Details -->
	
	</div> <!-- Filter Data, Details --> 

</div></div><!--/.container-fluid, row-->