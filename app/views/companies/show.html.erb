<div class="container mainpage"><div class="row">
 
  <div class="leftside span8">
    

	<%= render :partial => "entries/form" %>
    

    <div class="viewselect">
      <div data-toggle="buttons-radio">
        <button class="btn btn-info">Entries</button>
        <button class="offsethalf btn btn-info">Calendar</button>
        <button class="offsethalf btn btn-info">Trends</button>
      </div>
    </div><!-- ViewSelect -->
    
	<div class="details" id="entrytable">
		<%= render :partial => "entries/entries_table" %>
	</div><!-- details -->
  
  </div><!-- LeftSide -->



<!-- START RIGHT SIDE -->
  <div class="RightSide span4">

    <div class="feedback">

      <fieldset>
        <legend><username><%= @user.name %></legend>
        <div class="row">
          <div class="span1"><p>Week</p></div>
          <div class="span2 progress progress-striped progress-warning"><div class="bar" style="width: 55%;"></div></div>
          <div class="displaypercent"><p>55%</p></div>
        </div>
        <div class="row">
          <div class="span1"><p>Month</p></div>
          <div class="span2 progress progress-striped progress-warning"><div class="bar" style="width: 80%;"></div></div>
          <div class="displaypercent"><p>80%</p></div>
        </div>
        <div class="row">
          <div class="span1"><p>Year</p></div>
          <div class="span2 progress progress-striped progress-warning"><div class="bar" style="width: 65%;"></div></div>
          <div class="displaypercent"><p>65%</p></div>
        </div>
      </fieldset>
    </div><!-- Feedback --> 


	<%= form_tag root_url, :method => 'get' do %>
    <div class="filterdata">
      <div class="row dateselect">
        <form class="form-inline">
          <div class="span1">
				<label for="startdate">From</label>
				<%= text_field(:from, '', :value => @myfrom.strftime('%h %-d %Y'), 
					:class => "span1", :id => "startdate") %>
		  </div>
          <div class="span1">
				<label for="enddate">To</label>
		  		<%= text_field(:to, '', :value => @myto.strftime('%h %-d %Y'), 
					:class => "span1", :id => "enddate") %>	
		  </div>
		  <div class="span1">
				<%= submit_tag "Select", :name => nil %>
		 </div>
         </form>
      </div>
	  <% end %>


      <div class="projectlist row">
	
<!-- LIST PROJECTS -->
        <div class="span2">
			<p><%= link_to "+ add project", new_project_path %></p>
			
			<% @projects.each do |p| %>	
	          <label>
				<input type="checkbox" name="project" value="<%= p[0] %>" /> <%= p[0] %> (<%= p[2] %>)
			  </label>
  			<% end %>
                  
        </div>

<!-- LIST EMPLOYEES -->
        <div class="span2">
			<p><%= link_to "+ add employee", new_user_path %></p>
			
			<% @employees.each do |u| %>
          	  <label>
				<input type="checkbox" name="user" value="<%= u[0] %>" /> <%= u[0] %>  (<%= u[2] %>)
			  </label>
			<% end %>
                             
        </div>
      </div>


    </div><!-- FilterData -->

  </div><!-- RightSide -->



</div></div><!--/.container-fluid, row-->