<div id="homepage">
	<h1>Welcome to TimeFeather</h1>

	<% if current_user %>
	   <h2> Company: <%= my_company.name %> </h2>
		Logged in as <%= current_user.email %>
		<br />
		<%= link_to "add employees", new_user_path %>
		<%= link_to "create project", new_project_path %>
		<%= link_to "view entries", new_entry_path %>
