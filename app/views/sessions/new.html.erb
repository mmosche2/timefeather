<h2> New? </h2>
<h3>
	<%= link_to "Sign up a new company", signup_path %>
</h3>

<h2> Returning user? </h2>
<h3> Log In </h3>

<%= form_tag sessions_path do %>
	
  <div class="field">
          <%= label_tag :email %>
          <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
          <%= label_tag :password %>
          <%= password_field_tag :password %>
  </div>
  <div class="actions"><%= submit_tag "Log In" %>
	

<% end %>