<div class="container mainpage">


	<div class="row">
		<div class="span5">
 			<h2> New? </h2>
 			<br />
			<p><%= link_to "Register", signup_path, :class => "btn btn-warning" %></p>
	 	</div>
		<div class="span5">
	  		<h2> Returning? </h2>
	  		<br />

			  <%= form_tag sessions_path do %>
	
			    	<div class="field">
			            <%= label_tag :email %>
			            <%= text_field_tag :email, params[:email] %>
			    	</div>
			    	<div class="field">
			            <%= label_tag :password %>
			            <%= password_field_tag :password %>
			    	</div>
			  	<p><%= link_to "forgot password?", new_password_reset_path %></p>
			  	<div class="field">
			  		<%= check_box_tag :remember_me, 1, params[:remember_me] %> Remember me 
			  	</div>
				<br />
			    <div class="actions"><%= submit_tag "Log In", :class => "actions btn btn-warning" %>
	

			  <% end %>
		</div>
	</div>
</div>