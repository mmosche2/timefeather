<!DOCTYPE html>
<html>
<head>
  <title>Timefeather</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>

  <%= csrf_meta_tags %>
</head>
<body>
	
	<div class="navbar navbar-fixed-top">
	  <div class="navbar-inner">
	    <div class="container">
	      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
	        <!-- <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span> -->
	      </a>
		  <%= link_to "TimeFeather", root_url, :class => "brand topleftimage" %>
	      <div class="nav-collapse">
			<ul class="nav pull-right">
	
			<% if signed_in? %>
		  	
			<!-- USER IS SIGNED IN -->
	        
	          <li class="dropdown">
	  			   	<a href="#Projects" class="dropdown-toggle" data-toggle="dropdown">
						Projects
					<b class="caret"></b></a>
						
	  			   	<ul class="dropdown-menu">
	    	 		  	<li>
							<%= link_to root_url do %>
								<i class="icon-list"></i> Entries
							<% end %>
						</li>
	    			  	<li>
							<%= link_to root_url do %>
								<i class="icon-calendar"></i> Calendar
							<% end %>
						</li>	
	    			  	<li>
							<%= link_to root_url do %>
								<i class="icon-signal"></i> Trends
							<% end %>
						</li>
		         	</ul>
		        </li> <!-- dropdown -->
		        <li class="dropdown">
	  			   	<a href="#Settings" class="dropdown-toggle" data-toggle="dropdown">
						<%= current_user.name %>
					<b class="caret"></b></a>
	  			   	<ul class="dropdown-menu">
	    	 		  	<li><a href="#"><i class="icon-inbox"></i> Notifications</a></li>
	    			  	<li>
							<%= link_to account_path do %>
								<i class="icon-user"></i> Account
							<% end %>
						</li>	
	    			  	<li>
							<%= link_to logout_path do %>
								<i class="icon-off"></i> Log Out
							<% end %>
						
						</li>
		         	</ul>
		        </li> <!-- dropdown -->
		        <li class="dropdown">
	  			   	<a href="#Contact" class="dropdown-toggle" data-toggle="dropdown">
						Help
					<b class="caret"></b></a>
	  			   	<ul class="dropdown-menu">
	    	 		  <li><a href="#"><i class="icon-question-sign"></i> FAQ</a></li>
	    			  <li><a href="#"><i class="icon-comment"></i> Contact Us</a></li>	
	    			  <li><a href="#"><i class="icon-leaf"></i> About</a></li>
		         	</ul>
		        </li> <!-- dropdown -->
	        
	      
		
			<% else %>
			
			<!-- USER SIGNED OUT -->
	
				<li class="dropdown">
	  			   	<a href="#Contact" class="dropdown-toggle" data-toggle="dropdown">
						Help
					<b class="caret"></b></a>
	  			   	<ul class="dropdown-menu">
	    	 		  <li><a href="#"><i class="icon-question-sign"></i> FAQ</a></li>
	    			  <li><a href="#"><i class="icon-comment"></i> Contact Us</a></li>	
	    			  <li><a href="#"><i class="icon-leaf"></i> About</a></li>
		         	</ul>
		        </li> <!-- dropdown -->
				<li class="dropdown">
					<%= link_to "Login", login_path, :class => "dropdown-toggle" %>
		        </li> <!-- dropdown -->
	
			<% end %>
		
				</ul>
			</div><!--/.nav-collapse -->
	    </div>
	  </div>
	</div>

	<% flash.each do |key, value| %>
		<div class="flash <%= key %>"><%= value %></div>
	<% end %>


<%= yield %>



<footer>
  <br />
  <br />
  <div class="container">
   <p>2012 Experimentable</p>
  </div>
</footer>

<!-- javascript
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<%= javascript_include_tag "application" %>

</body>
</html>
