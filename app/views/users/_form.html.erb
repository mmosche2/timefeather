<%= simple_form_for @user do |f| %>

<h1>Company = <%= @company.name %></h1>

	<%= f.error_notification %>
	<%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation, :required => true %>
  	<%= f.hidden_field :company_id, :value => @company.id %>
	<%= f.error :base %>
	<%= f.button :submit %>

<% end %>


