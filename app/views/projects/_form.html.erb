
<%= simple_form_for @project do |f| %>

    <%= f.input :name %>
    <%= f.input :client, :input_html => { :rows => 2 }, :label => "Description", :placeholder => 'add project details here, like client info' %>
	<%= f.input :budgeted_hrs, :label => 'Project Hours (budgeted)' %>
    <%= f.hidden_field :company_id, :value => my_company.id %>
	<%= f.button :submit %>

<% end %>
